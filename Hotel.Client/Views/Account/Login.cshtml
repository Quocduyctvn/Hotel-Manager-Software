@model Hotel.Client.DTOs.LoginDTOs
@{
    ViewData["Title"] = "Đăng nhập tài khoản";
}


<div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
    <div class="bg-overlay"></div>
    <!-- auth-page content -->
    <div class="auth-page-content overflow-hidden pt-lg-5" style="z-index: 0">
        <div class="container" style="z-index: 0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card overflow-hidden m-0">
                        <div class="row justify-content-center g-0">
                            <div class="col-lg-6">
                                <div class="p-lg-5 p-4 auth-one-bg h-100">
                                    <div class="bg-overlay"></div>
                                    <div class="position-relative h-100 d-flex flex-column">
                                        <div class="mb-4" style="font-size: 20px; color:honeydew">
                                            HMSoft.com
                                        </div>
                                        <div class="mt-auto">
                                            <div class="mb-3">
                                                <i class="ri-double-quotes-l display-4 text-success"></i>
                                            </div>

                                            <div id="qoutescarouselIndicators" class="carousel slide" data-bs-ride="carousel">
                                                <div class="carousel-indicators">
                                                    <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                                    <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                                    <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                                </div>
                                                <div class="carousel-inner text-center text-white pb-5">
                                                    <div class="carousel-item active">
                                                        <p class="fs-15 fst-italic">"Tương lai của ngành khách sạn nằm trong lòng bàn tay bạn "</p>
                                                    </div>
                                                    <div class="carousel-item">
                                                        <p class="fs-15 fst-italic">"Chỉ cần một giải pháp thông minh, bạn đã sở hữu chìa khóa thành công của khách sạn"</p>
                                                    </div>
                                                    <div class="carousel-item">
                                                        <p class="fs-15 fst-italic">"Vận hành khách sạn thông minh – nâng tầm trải nghiệm khách hàng "</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- end carousel -->

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="p-lg-5 p-4">
                                    <div>
                                        <h5 class="text-primary">Đăng nhập vào hệ thống</h5>
                                        <p class="text-muted">Quản lý khách sạn hiệu quả, mọi lúc mọi nơi. Đăng nhập ngay để bắt đầu!</p>
                                    </div>

                                    <div class="mt-4">
                                        <form class="needs-validation" novalidate asp-action="Login">
                                            <div class="mb-3">
                                                <label for="username" class="form-label">Mã khách sạn <span class="text-danger">*</span></label>
                                                <input asp-for="HtelCode" type="text" class="form-control" id="username" placeholder="Nhập mã khách sạn" required>
                                                <div class="invalid-feedback">
                                                    Mã khách sạn là bắt buột
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="useremail" class="form-label">Email <span class="text-danger">*</span></label>
                                                <input asp-for="Email" type="email" class="form-control" id="useremail" placeholder="Vd: hotel@gmail.com" required>
                                                <div class="invalid-feedback">
                                                    Trường email này là bắt buột
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label" for="password-input">Mật khẩu</label>
                                                <div class="position-relative auth-pass-inputgroup">
                                                    <input asp-for="Pass"  type="password" class="form-control pe-5 password-input" onpaste="return false" placeholder="***********" id="password-input" aria-describedby="passwordInput" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                                    <div class="invalid-feedback">
                                                        Trường mật khẩu là bắt buột
                                                    </div>
                                                </div>
                                            </div>

                                            <div id="password-contain" class="p-3 bg-light mb-2 rounded">
                                                <h5 class="fs-14">Mật khẩu phải chứa</h5>
                                                <p id="pass-length" class="invalid fs-13 mb-2">Ít nhất <b>8 ký tự</b></p>
                                                <p id="pass-lower" class="invalid fs-13 mb-2">Ít nhất 1 <b> ký tự </b> thường (a-z)</p>
                                                <p id="pass-upper" class="invalid fs-13 mb-2">Ít nhất 1 <b> ký tự </b> Hoa (A-Z)</p>
                                                <p id="pass-number" class="invalid fs-13 mb-0">Ít nhất 1 <b> số </b> (0-9)</p>
                                            </div>

                                            <div class="mt-4">
                                                <button class="btn btn-success w-100" type="submit">Đăng nhập</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="mt-5 text-center">
                                        <p class="mb-0">Bạn thật sự có tài khoản chưa ? <a href="/Home/RentalPackage" class="fw-semibold text-primary text-decoration-underline"> Đăng ký</a> </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end Footer -->
</div>
<script src="~/assets/js/layout.js"></script>
