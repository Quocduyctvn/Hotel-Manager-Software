<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewBag.Title</title>
	<link rel="icon" type="image/x-icon" href="~/favicon.png" asp-append-version="true" />
	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="~/adminLTE/dist/css/adminlte.min.css">

	<link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />


	<link href="~/lib/bs4-autocomplete/css/bs4-autocomplete.css" rel="stylesheet" />
	<script src="~/js/site.js"></script>
	<script src="~/lib/tinymce/tinymce.min.js"></script>
	@* <script src="~/js/day-of-week/day.js"></script> *@
	@* notify  *@
	<link href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css" rel="stylesheet" />

	@RenderSection("head", false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
	<!-- Site wrapper -->
	<div class="wrapper">
		<partial name="_HeaderBar" />

		@await Component.InvokeAsync("MainNavBar")

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Main content -->
			<section class="content p-4">

				<partial name="_Noti" />

				<!-- Default box -->
				<div class="card">
					<div class="card-body px-4" style="background-color: #f4feff">
						@RenderBody()
					</div>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->

			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
		<footer class="main-footer">
			Phần Mềm Quản trị Khách Sạn - Giải pháp quản lý khách sạn toàn diện
		</footer>

	</div>
	@RenderSection("print", false)
	@* <partial name="_ChangePassword" model="null" /> *@

	<!-- ./wrapper -->
	<!-- jQuery -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<!-- Bootstrap 4 -->
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<!-- AdminLTE App -->
	<script src="~/adminLTE/dist/js/adminlte.min.js"></script>
	<!-- Validation -->
	<partial name="_ValidationScriptsPartial" />
	<!-- Thư viện modal -->
	<script src="~/lib/bs4-modal/modal.js"></script>
	<!-- Thư viện autocomplete nhà trồng -->
	<script src="~/lib/bs4-autocomplete/js/bs4-autocomplete.js"></script>
	<!-- Javascript dùng chung -->
	<script src="~/js/site.js" asp-append-version="true"></script>

	@* Role *@
	<script src="~/js/role/create-edit-role.js"></script>
	<script src="~/js/role/delete-role.js"></script>
	@* Chart  *@
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

	<script src="~/js/amenities/amenity.js" asp-append-version="true"></script>
	@* Notify  *@
	<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
	@RenderSection("scripts", false)
</body>
</html>
