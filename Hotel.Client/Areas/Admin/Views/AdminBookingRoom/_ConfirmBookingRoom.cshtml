<div class="modal fade" id="missingInfoModall" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title text-danger">Thông báo</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Bạn chưa nhập thông tin Khách hàng.
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
			</div>
		</div>
	</div>
</div>

<!-- Modal xác nhận đặt phòng -->
<div class="modal fade" id="confirmBookingModall" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title text-success">Xác nhận</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Bạn có chắc chắn muốn đặt phòng?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
				<a asp-action="ConfirmBooking">
					<button type="button" class="btn btn-primary">Xác nhận</button>
				</a>
			</div>
		</div>
	</div>
</div>
<script>
	document.addEventListener("DOMContentLoaded", function () {
		const bookRoomBtn = document.getElementById("bookRoomBtnn");
		const cusNameInput = document.getElementById("c_name");

		bookRoomBtn.addEventListener("click", function () {
			const cusName = cusNameInput.value.trim();

			if (!cusName) {
				// Hiển thị popup thông báo chưa nhập thông tin khách hàng
				var $jq = jQuery.noConflict();
				$jq("#missingInfoModall").modal("show");
			} else {
				// Hiển thị popup xác nhận đặt phòng
				var $jq = jQuery.noConflict();
				$jq("#confirmBookingModall").modal("show");
			}
		});
	});
</script>