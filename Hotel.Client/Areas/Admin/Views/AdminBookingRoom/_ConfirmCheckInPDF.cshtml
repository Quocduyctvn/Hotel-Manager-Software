@using Hotel.Data.Entities
@using Newtonsoft.Json
@model Hotel.Data.Entities.AppBookingRoom
@{

    var hotelJson = TempData["Hotel"]?.ToString();
    var Hotel = string.IsNullOrEmpty(hotelJson) ? null : JsonConvert.DeserializeObject<AppHotels>(hotelJson);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Thanh Toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: rgb(235, 235, 235);
        }

    </style>
</head>
<body style=" background-color: #f9fdff;">
    <div class="container mt-5">
        <div class="card" style="padding: 10px 20px">
            <div class="row">
                <div class="col-4">
                    <span style="font-size: 13px;">@DateTime.Now</span>
                </div>
                <div class="col-4">
                </div>
                <div class="col-4 text-end">
                    <span style="font-size: 13px;">Chi nhánh trung tâm</span>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col" style="display: flex; justify-content: center">
                    <div clas="row">
                        <div style="font-size: 35px; font-family:Georgia, 'Times New Roman', Times, serif" class="text-center"><span>@Hotel.Name</span></div>
                        <div style="font-size: 16px;" class="text-center"><span>Địa chỉ: @Hotel.Location</span></div>
                        <div style="font-size: 14px;" class="text-center"><span>Số điện thoai: @Hotel.Phone</span></div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top: 30px">
                <div class="col-4">
                    <span style="font-weight: bold;">Mã đặt phòng: </span>
                    <span>@Model.Code</span>
                </div>
                <div class="col-4">
                </div>
                <div class="col-4 text-end">
                    <span style="font-weight: bold;">Người xuất phiếu: </span>
                    <span>@Model.appUser.Name</span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <span>Ngày xuất: @DateTime.Now    </span>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col" style="display: flex; justify-content: center">
                    <div clas="row">
                        <div style="font-size: 20px; text-transform: uppercase; font-weight: bold;" class="text-center">
                            <span>PHIẾU XÁC NHẬN - NHẬN PHÒNG</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top: 30px">
                <div class="col">
                    <div style="font-weight: bold;">Thông tin khách lưu trú: </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="col-3">Tên khách</td>
                                <td>@Model.appCustHotel.Name</td>
                            </tr>
                            <tr>
                                <td>Điện thoại</td>
                                <td>@Model.appCustHotel.Phone</td>
                            </tr>
                            <tr>
                                <td>Quốc tịch</td>
                                <td>@Model.appCustHotel.Country</td>
                            </tr>
                            <tr>
                                <td>Địa chỉ</td>
                                <td>@Model.appCustHotel.Address</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row" style="margin-top: 20px">
                <div class="col">
                    <div style="font-weight: bold;">Thông tin đặt phòng: </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td class="col-3">Thời gian nhận phòng dự kiến</td>
                                <td>@Model.CheckInExpectual</td>
                            </tr>
                            <tr>
                                <td class="col-3">Thời gian nhận phòng thực tế </td>
                                <td>@Model.CheckInActual</td>
                            </tr>
                            <tr>
                                <td>Thời gian trả phòng dự kiến</td>
                                <td>@Model.CheckOutExpectual</td>
                            </tr>
                            <tr>
                                <td>Hạng phòng </td>
                                <td>@Model.appRoom.appRoomCate.Name</td>
                            </tr>
                            <tr>
                                <td>Số phòng </td>
                                <td>@Model.appRoom.Name</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <span style="font-size: 17px; color:#f13737">
                        Lưu ý quan trọng: Thông tin về chính sách và điều kiện điều khoản của khách sạn
                    </span>
                </div>
            </div>

            <div class="row " style="margin: 40px 0 90px;">
                <div class="col-4 text-center">
                    <div style="font-size: 17px;">Chữ ký của khách</div>
                    <div style="font-size: 13px;"><i>(Ký & ghi rõ họ tên)</i></div>
                </div>
                <div class="col-4">
                </div>
                <div class="col-4 text-center">
                    <div style="font-size: 17px;">Chữ ký Nhân viên</div>
                    <div style="font-size: 13px;"><i>(Ký & ghi rõ họ tên)</i></div>
                </div>
            </div>

        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
