@model Hotel.Admin.Areas.Admin.DTOs.Article.CreateOrUpdateArticleDTO

@{
    ViewData["Title"] = "Edit";
}

<h4>Sửa bài viết</h4>
<hr />
<div class="container">
    <!-- Form sửa bài viết -->
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="row d-flex">
            <!-- Cột bên trái: Form thông tin cơ bản -->
            <div class="col-md-4">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">Tên bài viết</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Summary" class="control-label">Mô tả</label>
                    <input asp-for="Summary" class="form-control" />
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="control-label">Ảnh bìa</label>
                    <input asp-for="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdCategory" class="control-label">Danh mục</label>
                    <select asp-items="ViewBag.Categories" asp-for="IdCategory" class="form-control"></select>
                    <span asp-validation-for="IdCategory" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
            <!-- Cột bên phải: TinyMCE Editor -->
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Nội dung</label>
                    <textarea id="Content" asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
	<script>
        // xóa validate required của Image
		document.getElementById("ImageFile").removeAttribute("data-val-required");
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="~/lib/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#Content"
    });
</script>
