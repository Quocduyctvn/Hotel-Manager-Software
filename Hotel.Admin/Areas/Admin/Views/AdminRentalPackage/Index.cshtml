@using Hotel.Share.Enums
@model X.PagedList.PagedList<Hotel.Data.Entities.AppRentalPackage>
@{
	var stt = 1;
}


<div class="row w-100 fs-4 pt-2">
	<span class="ps-2" style="font-size: 25px">Danh sách gói thuê</span>
</div>
<hr />
