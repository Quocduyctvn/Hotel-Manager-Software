@{
	var typeOfMesg = "";
	var mesg = "";
}

@{
	// lấy Url trong trường hợp truy cập k hợp lệ
	string returnUrl = Context.Request.Query["ReturnUrl"];
	if(returnUrl != null)
	{
		TempData["Err"] = "Cảnh báo truy cập không hợp lệ";
	}
}

@if (TempData["Err"] != null)
{
	typeOfMesg = "danger";
	mesg = TempData["Err"]!.ToString();
}
else if (TempData["Success"] != null)
{
	typeOfMesg = "success";
	mesg = TempData["Success"]!.ToString();
}
else if (TempData["Wrn"] != null)
{
	typeOfMesg = "warning";
	mesg = TempData["Wrn"]!.ToString();
}

@if (!string.IsNullOrEmpty(typeOfMesg))
{
	<div class="alert alert-@typeOfMesg alert-dismissible js-alert fade show" role="alert">
		@mesg
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
}