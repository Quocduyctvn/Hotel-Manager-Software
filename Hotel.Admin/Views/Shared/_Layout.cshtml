<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel.Admin</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" asp-append-version="true" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminLTE/dist/css/adminlte.min.css">

    <link href="~/lib/bs4-toast-snackbar/css/toast-snackbar.css" rel="stylesheet" asp-append-version="true" />

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    <link href="~/lib/bs4-autocomplete/css/bs4-autocomplete.css" rel="stylesheet" />

    <script src="~/lib/tinymce/tinymce.min.js"></script>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
            <!-- Main content -->
            <section class="content p-4">

                <partial name="_Noti" />
                        @RenderBody()
                <!-- /.card -->

            </section>
        <!-- /.content-wrapper -->

    </div>

    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Thư viện toast-->
    <script src="~/lib/bs4-toast-snackbar/js/toast-snackbar.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminLTE/dist/js/adminlte.min.js"></script>
    <!-- Validation -->
    <partial name="_ValidationScriptsPartial" />
    <!-- Thư viện modal -->
    <script src="~/lib/bs4-modal/modal.js"></script>
    <!-- Thư viện autocomplete nhà trồng -->
    <script src="~/lib/bs4-autocomplete/js/bs4-autocomplete.js"></script>
    <!-- Javascript dùng chung -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/amenities/amenity.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
